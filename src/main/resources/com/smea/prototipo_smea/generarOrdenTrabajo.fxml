<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="paneFondo" prefHeight="800" prefWidth="1400" stylesheets="@../../../css/estilo-ordenTrabajo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smea.prototipo_smea.controller.generarOrdenTrabajoController">

    <children>

        <Pane fx:id="paneContenedor" layoutX="127.0" layoutY="34.0" prefHeight="734.0" prefWidth="1292.0" styleClass="panel-principal">

            <!-- TÍTULO -->
            <Label fx:id="labelBienvenida" layoutX="328.0" layoutY="28.0" styleClass="titulo-modulo" text="GENERAR ORDEN DE TRABAJO">
                <font>
                    <Font size="22" />
                </font>
            </Label>

            <!-- ================= DATOS CLIENTE ================= -->
            <TitledPane fx:id="titledPaneDatosCliente" expanded="true" layoutX="49.0" layoutY="109.0" prefWidth="1160" text="Datos del Cliente">

                <AnchorPane fx:id="anchorPaneCliente" prefHeight="202.0" prefWidth="1158.0">

                    <Label layoutX="183.0" layoutY="17.0" text="Cliente:" />
                    <TextField fx:id="txtCliente" layoutX="266.0" layoutY="11.0" prefWidth="300" />

                    <Label layoutX="555.0" layoutY="17.0" text="Contacto:" />
                    <TextField fx:id="txtContacto" layoutX="650.0" layoutY="9.0" prefHeight="38.0" prefWidth="292.0" />

                    <Label layoutX="164.0" layoutY="67.0" text="Dirección:" />
                    <TextField fx:id="txtDireccion" layoutX="263.0" layoutY="60.0" prefWidth="690" />
               <Label layoutX="585.0" layoutY="67.0" text="Email:" />
               <TextField fx:id="txtEmail" layoutX="648.0" layoutY="60.0" prefHeight="38.0" prefWidth="292.0" />

                </AnchorPane>
            <font>
               <Font size="18.0" />
            </font>
            </TitledPane>

            <!-- ================= DATOS TRABAJO ================= -->
            <TitledPane fx:id="titledPaneDatosTrabajo" expanded="true" layoutX="48.0" layoutY="263.0" prefHeight="227.0" prefWidth="1160.0" text="Datos del Trabajo">

                <AnchorPane fx:id="AnchorPaneTrabajo" prefHeight="214.0" prefWidth="1158.0">

                    <Label layoutX="156.0" layoutY="15.0" text="Tipo de Trabajo:" />
                    <ChoiceBox fx:id="choiceTipoTrabajo" layoutX="308.0" layoutY="11.0" prefWidth="250" />

                    <Label layoutX="596.0" layoutY="15.0" text="Prioridad:" />
                    <ChoiceBox fx:id="choicePrioridad" layoutX="696.0" layoutY="11.0" prefHeight="38.0" prefWidth="225.0" />

                    <Label layoutX="156.0" layoutY="65.0" text="Descripción:" />
                    <TextArea fx:id="txtDescripcion" layoutX="296.0" layoutY="61.0" prefHeight="100.0" prefWidth="627.0" />

                </AnchorPane>
            <font>
               <Font size="18.0" />
            </font>
            </TitledPane>

            <!-- ================= BOTONES ================= -->
            <HBox alignment="CENTER" layoutX="460.0" layoutY="679.0" spacing="20">

                <Button fx:id="btnGuardar" onAction="#guardarOrden" prefHeight="33.0" prefWidth="128.0" styleClass="btn-guardar" text="Guardar Orden" />

                <Button fx:id="btnLimpiar" onAction="#limpiarFormulario" prefHeight="33.0" prefWidth="107.0" styleClass="btn-limpiar" text="Limpiar" />

                <Button fx:id="btnCancelar" onAction="#cancelar" prefHeight="34.0" prefWidth="110.0" styleClass="btn-cancelar" text="Cancelar" />
            </HBox>

                        <!-- ================= ASIGNACIÓN ================= -->
            <TitledPane fx:id="titledPaneAsignacionProgramacion" expanded="true" layoutX="45.0" layoutY="480.0" prefHeight="169.0" prefWidth="1163.0" text="Asignación y Programación">
   
                            <AnchorPane fx:id="anchorPaneAsignarProgramar" prefHeight="120">
   
                                <Label layoutX="56.0" layoutY="22.0" text="Técnico Responsable:" />
                    <ChoiceBox fx:id="choiceTecnico" layoutX="266.0" layoutY="15.0" prefWidth="300" />
   
                                <Label layoutX="598.0" layoutY="22.0" text="Fecha Programada:" />
                    <DatePicker fx:id="dateProgramada" layoutX="780.0" layoutY="15.0" />
   
                                <Label layoutX="56.0" layoutY="67.0" text="Observaciones:" />
                    <TextField fx:id="txtObservaciones" layoutX="226.0" layoutY="63.0" prefWidth="650" />
   
                            </AnchorPane>
            <font>
               <Font size="18.0" />
            </font>
            </TitledPane>
         <Button fx:id="buttonRegresar" layoutX="57.0" layoutY="684.0" mnemonicParsing="false" onAction="#regresar" text="Regresar" />

        </Pane>
    </children>
</AnchorPane>
